<div class ="container container border .w-70 shadow-lg p-3 mb-5 bg-white rounded mt-5">

 <h1>Bus List</h1>

<%= form_with url:searchbus_path(@user) do |form| %>
    <div class="container mb mb-3">
    <div class="row">
        <div class="col mb-3">
        <%= form.label :source%>
        <%= form.text_field :source,class:"form-control"%>
        </div>
    
      <div class="col mb-3">
        <%= form.label :destination%>
        <%= form.text_field :destination,class:"form-control"%>
        </div>       
<div class="row">
      <div class="col mb-3">
      <%= form.label :sort %>
      </div>
      <div class="col form-check">
      <%= form.label :time, class: "form-check-label" %>
      <%= form.check_box :time, class: "form-check-input" %>
      </div>
      <div class="col form-check">
      <%= form.label :fare, class: "form-check-label" %>
        <%= form.check_box :fare, class: "form-check-input" %>
        </div>
      <div class="col mb-3">
      <%=form.submit "Apply", class:"btn btn-primary" %>
      </div>
  </div>
     </div>
      </div>
    <%end%>


 <table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Bus number</th>
      <th>Bus name</th>
      <th>Source</th>
      <th>Destination</th>
      <th>Price</th>
      <th>Date</th>
      <th>Time</th>
      <th>Time taken</th>
      <th>Available Seats</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sortbusinfos.each do |businfo| %>
      <tr>
        <td><%= businfo.Bus_Number %></td>
        <td><%= businfo.Bus_Name %></td>
        <td><%= businfo.Source %></td>
        <td><%= businfo.Destination %></td>
        <td><%= businfo.Price %></td>
        <td><%= businfo.Date %></td>
        <td><%= businfo.Time %></td>
        <td><%= businfo.Time_taken %></td>
        <td><%= businfo.Availableseats %></td>
      <td><%= link_to "Select Bus",booking_path(@user,businfo) ,class:"btn btn-primary" %></td>
      </tr>
      
    <% end %>
  </tbody>
</table>
<%=link_to "Log-Out",users_userlogin_path,class:"btn btn-primary"%>
</div>

